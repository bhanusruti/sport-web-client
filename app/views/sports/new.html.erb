<h1>Here's the page</h1>

<%= form_tag "/sports", method: :post do %>

  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  
  <div>
    <%= label_tag :players%>
    <%= text_field_tag :players %>
  </div>
  <div>
    <%= label_tag :country_of_origin%>
    <%= text_field_tag :country_of_origin %>
  </div>
  
  <%= submit_tag "submit" %>

<% end %>